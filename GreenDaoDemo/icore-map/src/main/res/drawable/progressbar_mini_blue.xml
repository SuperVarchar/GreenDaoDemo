<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="#dededf"
                android:startColor="#dededf" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>

                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="#4987f4"
                    android:startColor="#4987f4" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>

                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="#4987f4"
                    android:startColor="#4987f4" />
            </shape>
        </clip>
    </item>

</layer-list>