<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_ffffff"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/base15dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/base28dp"
            android:layout_height="@dimen/base28dp"
            android:layout_marginLeft="@dimen/base10dp"
            android:layout_marginRight="@dimen/base12dp"
            android:src="@drawable/xzgl_file"/>

        <TextView
            android:id="@+id/text_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/base15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base20dp"
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginRight="@dimen/base15dp"
        android:layout_marginTop="@dimen/base20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/base8dp">


        <ProgressBar
            android:id="@+id/item_progressbar"
            style="@style/ProgressBar_Mini"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/progress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base4dp"
            android:layout_marginLeft="@dimen/base10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/color_00c085"
            android:textSize="@dimen/base14dp"/>


        <ImageView
            android:id="@+id/button_pause"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base20dp"
            android:contentDescription="@drawable/xzgl_downloads"
            android:paddingLeft="@dimen/base10dp"
            android:paddingRight="@dimen/base10dp"
            android:src="@drawable/xzgl_downloads"/>

        <ImageView
            android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/base10dp"
            android:paddingRight="@dimen/base10dp"
            android:src="@drawable/xzgl_delete"/>

    </LinearLayout>
</LinearLayout>