<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/base15dp"
        android:paddingRight="@dimen/base15dp"
        >

        <ImageView
            android:id="@+id/person_logo"
            android:layout_width="@dimen/base36dp"
            android:layout_height="@dimen/base36dp"
            android:layout_marginRight="@dimen/base10dp"
            android:src="@drawable/steel"/>


        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base15dp"
            android:maxLines="1"
            android:maxWidth="@dimen/base250dp"
            android:text="主要标题"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/base15dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/base10dp"
            android:drawableRight="@drawable/communication_right"
            android:singleLine="true"
            android:text="9"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/base13dp"/>


    </LinearLayout>

    <View
        android:id="@+id/all_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc"/>

    <View
        android:id="@+id/not_all_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/base15dp"
        android:background="#cccccc"/>
</LinearLayout>