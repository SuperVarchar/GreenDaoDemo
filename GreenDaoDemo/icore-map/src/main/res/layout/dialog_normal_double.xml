<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/umeng_update_dialog_bg"
            android:layout_width="@dimen/base320dp"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/dialog_normal"
                android:layout_marginTop="@dimen/base15dp"
                android:layout_width="@dimen/base38dp"
                android:layout_height="@dimen/base38dp"/>

            <TextView
                android:textColor="@color/color_333333"
                android:textSize="@dimen/base17dp"
                android:text="温馨提示"
                android:layout_marginTop="@dimen/base15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="@dimen/base35dp"
                android:layout_marginRight="@dimen/base15dp"
                android:layout_marginLeft="@dimen/base15dp"
                android:id="@+id/content"
                android:textColor="@color/color_656565"
                android:layout_marginTop="@dimen/base15dp"
                android:textSize="@dimen/base17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <include layout="@layout/include_line"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.hnshituo.icore_map.view.view.AnimationButton
                    android:id="@+id/dialog_cancel"
                    android:textSize="@dimen/base16dp"
                    android:textColor="@color/color_999999"
                    android:text="取消"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/base50dp"
                    android:background="@drawable/umeng_bottom_cancle_dialog_bg"
                    />

                <com.hnshituo.icore_map.view.view.AnimationButton
                    android:id="@+id/dialog_confirm"
                    android:text="确定"
                    android:textSize="@dimen/base16dp"
                    android:textColor="@color/color_01adff"
                    android:background="@drawable/umeng_bottom_dialog_bg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/base50dp"/>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>