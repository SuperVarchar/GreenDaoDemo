<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/umeng_update_dialog_bg"
        android:layout_width="@dimen/base320dp"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/dialog_error"
            android:layout_marginTop="@dimen/base15dp"
            android:layout_width="@dimen/base38dp"
            android:layout_height="@dimen/base38dp"/>

        <TextView
            android:id="@+id/dialog_title"
            android:textColor="@color/color_333333"
            android:textSize="17sp"
            android:text="错误"
            android:layout_marginTop="@dimen/base15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="@dimen/base35dp"
            android:layout_marginRight="@dimen/base15dp"
            android:layout_marginLeft="@dimen/base15dp"
            android:id="@+id/content"
            android:textColor="@color/color_656565"
            android:layout_marginTop="@dimen/base15dp"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <include layout="@layout/include_line"/>



        <com.hnshituo.icore_map.view.view.AnimationButton
            android:background="@drawable/umeng_update_dialog_bg"
            android:id="@+id/dialog_confirm"
            android:text="知道了"
            android:textSize="18sp"
            android:textColor="@color/color_01adff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base50dp"/>

    </LinearLayout>

</LinearLayout>