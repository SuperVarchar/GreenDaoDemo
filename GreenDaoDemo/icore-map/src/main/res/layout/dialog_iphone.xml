<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@android:color/transparent"
              android:gravity="bottom"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ListView
        android:overScrollMode="never"
        android:listSelector="#00000000"
        android:cacheColorHint="#00000000"
        android:scrollbars="none"
        android:dividerHeight="1px"
        android:id="@+id/iphone_lv"
        android:background="@drawable/radius_stroke_write"
        android:layout_margin="@dimen/base15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>

    <com.hnshituo.icore_map.view.view.AnimationButton
        android:typeface="serif"
        android:id="@+id/iphone_cancel"
        android:layout_marginRight="@dimen/base15dp"
        android:layout_marginLeft="@dimen/base15dp"
        android:layout_marginBottom="@dimen/base15dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#fa3f25"
        android:background="@drawable/radius_stroke_write"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base50dp"/>
</LinearLayout>