<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/filter_ll"
              android:background="@color/color_f5f4f9"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <include layout="@layout/include_line"/>

    <ListView
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:paddingLeft="@dimen/base15dp"
        android:paddingRight="@dimen/base15dp"
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/filter_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

    <include
        layout="@layout/include_line"/>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.hnshituo.icore_map.view.view.AnimationButton
        android:id="@+id/filter_finish"
        android:layout_marginTop="@dimen/base7dp"
        android:layout_marginBottom="@dimen/base7dp"
        android:layout_marginRight="@dimen/base15dp"
        android:background="@color/color_4987f4"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/base67dp"
        android:layout_height="@dimen/base29dp"
        android:textColor="@color/white"
        android:textSize="@dimen/base13dp"
        android:text="完成"/>
    </RelativeLayout>

    <include
        layout="@layout/include_line"/>

</LinearLayout>